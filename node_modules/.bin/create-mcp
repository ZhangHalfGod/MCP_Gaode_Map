#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/bun" ]; then
  exec "$basedir/bun"  "$basedir/../create-mcp/cli.ts" "$@"
else 
  exec bun  "$basedir/../create-mcp/cli.ts" "$@"
fi
